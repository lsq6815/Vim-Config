{
    "languageserver": {
        /* yarn global add purescript-language-server */
        "purescript": {
            "command": "purescript-language-server.cmd",
            "args": [
                "--stdio"
            ],
            "filetypes": [
                "purescript"
            ],
            "trace.server": "off",
            "rootPatterns": [
                "bower.json",
                "psc-package.json",
                "spago.dhall"
            ],
            "settings": {
                "purescript": {
                    "addSpagoSources": true
                }
            }
        },
        /* manually download release from github page */
        "elixirLS": {
            "command": "D:\\Apps\\elixir-ls\\language_server.bat",
            "filetypes": [
                "elixir",
                "eelixir"
            ]
        },
        /* manually download release from github page */
        "haskell": {
            "command": "D:\\Apps\\haskell-language-server-Windows-1.6.1.0\\haskell-language-server-wrapper.exe",
            "args": [
                "--lsp"
            ],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml",
                "hie.yaml"
            ],
            "filetypes": [
                "haskell",
                "lhaskell"
            ]
        }
    },
    "clangd.path": "clangd",
    "texlab.path": "xelatex",
    "solargraph.formatting": true,
    "solargraph.diagnostics": true,
    "volar.diagnostics.tsLocale": "zh-cn",
    "volar.autoCreateQuotes": true,
    "volar.autoClosingTags": true
}
